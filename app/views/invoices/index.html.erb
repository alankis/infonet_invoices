<h1>Infonet Invoice Browser</h1>

<table class="table table-striped table-hover">
  <tr>
    <th>id</th>
    <th>userid</th>
    <th>invoicenum</th>
    <th>date</th>
    <th>duedate</th>
    <th>datepaid</th>
    <th>subtotal</th>
    <th>credit</th>
    <th>tax</th>
    <th>tax2</th>
    <th>total</th>
    <th>taxrate</th>
    <th>taxrate</th>
    <th>status</th>
    <th>paymentmethod</th>
    <th>fullcredit</th>
  </tr>
  <% @invoices.each do |invoice| %>
  <tr>
    <td><%= invoice.id %></td>
    <td><%= invoice.userid %></td>
    <td><%= invoice.invoicenum %></td>
    <td><%= invoice.date %></td>
    <td><%= invoice.duedate %></td>
    <td><%= invoice.datepaid %></td>
    <td><%= invoice.subtotal %></td>
    <td><%= invoice.credit %></td>
    <td><%= invoice.tax %></td>
    <td><%= invoice.tax2 %></td>
    <td><%= invoice.total %></td>
    <td><%= invoice.taxrate %></td>
    <td><%= invoice.taxrate2 %></td>
    <td><%= invoice.status %></td>
    <td><%= invoice.paymentmethod %></td>
    <td><%= invoice.fullcredit %></td>
  </tr>
  <% end %>
</table>
<div class="pagination">
  <%= will_paginate @invoices, renderer: BootstrapPagination::Rails %>
